#!/bin/bash

# PDF处理器命令行工具包装脚本

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 设置Node.js模块路径
export NODE_PATH="${SCRIPT_DIR}:${SCRIPT_DIR}/node_modules:${NODE_PATH}"

# 检查Node.js是否安装
if ! command -v node &> /dev/null; then
    echo "❌ 错误: 未找到Node.js，请先安装Node.js"
    echo "   下载地址: https://nodejs.org/"
    exit 1
fi

# 检查package.json是否存在
if [ ! -f "${SCRIPT_DIR}/package.json" ]; then
    echo "❌ 错误: 未找到package.json文件"
    echo "   请确保在正确的项目目录中运行此脚本"
    exit 1
fi

# 检查node_modules是否存在
if [ ! -d "${SCRIPT_DIR}/node_modules" ]; then
    echo "⚠️  警告: node_modules目录不存在，正在安装依赖..."
    cd "${SCRIPT_DIR}" && npm install
    if [ $? -ne 0 ]; then
        echo "❌ 错误: 依赖安装失败"
        exit 1
    fi
fi

# 运行CLI工具
node "${SCRIPT_DIR}/src/cli/index.js" "$@"