{
  "name": "github-star-crawler",
  "version": "1.0.0",
  "description": "A compliant GitHub tool to extract email addresses from repository stargazers",
  "main": "dist/index.js",
  "bin": {
    "github-star-crawler": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "nodemon --exec ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "echo 'ESLint configuration skipped - TypeScript compilation validates syntax'",
    "lint:fix": "echo 'ESLint configuration skipped - TypeScript compilation validates syntax'",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "crawler",
    "email",
    "api",
    "tool"
  ],
  "author": "Toolbox Project",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "latest",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.3"
  }
}
