# 魔兽世界游戏助手配置文件
# 复制此文件为 .env 并填入实际配置值

# =============================================================================
# AI 模型配置
# =============================================================================

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-vision-preview

# Claude API 配置 (可选)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# 游戏配置
# =============================================================================

# 魔兽世界客户端路径 (Windows)
WOW_CLIENT_PATH=C:\Program Files (x86)\World of Warcraft\_retail_\Wow.exe

# 游戏窗口标题模式 (用于检测游戏窗口)
WOW_WINDOW_TITLE=World of Warcraft

# 屏幕分辨率配置
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080

# =============================================================================
# 安全配置
# =============================================================================

# 最大连续使用时间 (小时)
MAX_SESSION_HOURS=4

# 强制休息间隔 (分钟)
REST_INTERVAL_MINUTES=30

# 安全检查间隔 (秒)
SAFETY_CHECK_INTERVAL=60

# 输入延迟范围 (毫秒)
MIN_INPUT_DELAY=100
MAX_INPUT_DELAY=500

# 鼠标速度系数 (0.1-2.0)
MOUSE_SPEED_FACTOR=1.0

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs/wow-agent.log

# 是否启用详细日志
VERBOSE_LOGGING=false

# =============================================================================
# 钓鱼场景配置
# =============================================================================

# 钓鱼技能快捷键
FISHING_SKILL_KEY=1

# 鱼咬钩检测颜色 (RGB)
FISHING_HOOK_COLOR_R=255
FISHING_HOOK_COLOR_G=165
FISHING_HOOK_COLOR_B=0

# 音频提醒音量 (0-100)
AUDIO_ALERT_VOLUME=50

# 是否启用音频提醒
ENABLE_AUDIO_ALERTS=true

# 是否启用视觉提醒
ENABLE_VISUAL_ALERTS=true

# =============================================================================
# 开发和调试
# =============================================================================

# 开发模式
NODE_ENV=development

# 是否启用调试模式
DEBUG_MODE=false

# 测试模式 (不实际执行游戏操作)
TEST_MODE=false

# 插件开发模式
PLUGIN_DEV_MODE=false